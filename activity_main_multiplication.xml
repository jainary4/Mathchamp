<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextRows1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_rows_for_matrix_1"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:minHeight="48dp"
            android:autofillHints="" />

        <!-- Number of Columns Input -->
        <EditText
            android:id="@+id/editTextColumns1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_columns_for_matrix_1"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:minHeight="48dp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/editTextRows2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_rows_for_matrix_2"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:minHeight="48dp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/editTextColumns2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_columns_for_matrix_2"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:minHeight="48dp"
            android:autofillHints="" />

        <Button
            android:id="@+id/buttonGenerateMatrices_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/generate_matrix"
            android:background="#546E7A"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/matricesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/matrixLayout1_m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp"
                android:layout_weight="0.2" />

            <LinearLayout
                android:id="@+id/matrixLayout2_m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonCalculate_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculate"
            android:background="#546E7A"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/result_multiplication_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" />

    </LinearLayout>


</ScrollView>
